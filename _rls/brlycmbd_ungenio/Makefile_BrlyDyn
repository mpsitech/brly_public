# file Makefile
# make file for operation pack BrlyDyn, release brlycmbd_ungenio
# author Alexander Wirthmueller
# date created: 8 Jan 2018
# modified: 8 Jan 2018

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DBRLYCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbsbrly -I$(SRCROOT)/brlycmbd/VecBrly -I$(SRCROOT)/brlycmbd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/include -I/usr/local/include -I/usr/local/include/libxml2 -I/usr/local/mysql/include -I/usr/local/opt/sqlite/include

OBJS = BrlyDyn_blks.o BrlyDyn.o
OBJS += BrlyDynConflt.o BrlyDynConseg.o BrlyDynEqplist.o BrlyDynFltfltloc.o BrlyDynFltseg.o BrlyDynRly.o BrlyDynSeglocseg.o SqkBrlyDyn.o

LIB = libbrlydyn

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/brlycmbd/

clean:
	rm -f *.o

