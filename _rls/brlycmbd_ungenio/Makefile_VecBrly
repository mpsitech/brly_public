# file Makefile
# make file for Brly system vectors, release brlycmbd_ungenio
# author Alexander Wirthmueller
# date created: 8 Jan 2018
# modified: 8 Jan 2018

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I/Library/PostgreSQL/9.6/include -I/usr/include -I/usr/local/include -I/usr/local/include/libxml2 -I/usr/local/mysql/include -I/usr/local/opt/sqlite/include

OBJS = VecBrlyVCall.o VecBrlyVDpch.o VecBrlyVExpstate.o VecBrlyVIop.o VecBrlyVJob.o VecBrlyVLop.o VecBrlyVMimetype.o VecBrlyVOpengtype.o VecBrlyVOppack.o VecBrlyVQrystate.o VecBrlyVReqitmode.o VecBrlyVStub.o VecBrlyVTag.o

LIB = libvecbrly

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/

clean:
	rm -f *.o

