# file Makefile
# make file for CrdBrlyReg card job handler, release brlycmbd_awsubt
# author Alexander Wirthmueller
# date created: 8 Jan 2018
# modified: 8 Jan 2018

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DBRLYCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbsbrly -I$(SRCROOT)/brlycmbd/VecBrly -I$(SRCROOT)/brlycmbd/IexBrly -I$(SRCROOT)/brlycmbd
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdBrlyReg.o PnlBrlyRegRec.o PnlBrlyRegDetail.o PnlBrlyRegADstswitch.o QryBrlyRegADstswitch.o PnlBrlyReg1NLocation.o QryBrlyReg1NLocation.o PnlBrlyRegSup1NRegion.o QryBrlyRegSup1NRegion.o PnlBrlyRegHeadbar.o PnlBrlyRegList.o QryBrlyRegList.o

LIB = libcrdbrlyreg

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/brlycmbd/

clean:
	rm -f *.o

