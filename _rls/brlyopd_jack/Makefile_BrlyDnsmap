# file Makefile
# make file for operation pack BrlyDnsmap, release brlyopd_jack
# author Alexander Wirthmueller
# date created: 8 Jan 2018
# modified: 8 Jan 2018

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread
STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbsbrly -I$(SRCROOT)/brlyopd/VecBrly -I$(SRCROOT)/brlyopd
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = BrlyDnsmap_blks.o BrlyDnsmap.o
OBJS += BrlyDnsmapCollect.o BrlyDnsmapFrame.o BrlyDnsmapVideo.o

LIB = libbrlydnsmap

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/brlyopd/

clean:
	rm -f *.o

